#ifndef TERRAINCONFIG_HPP
#define TERRAINCONFIG_HPP

#include <string>
#include <sstream>

/**
 * @file config.hpp
 * @brief Build time configured options and settings
 */

namespace terrain {

  /**
   * @brief Versioning object
   *
   * We use [semantic versioning](http://semver.org).
   */
  const struct semver {
    /// The major version
    const unsigned short int major;
    /// The minor version
    const unsigned short int minor;
    /// The patch number
    const unsigned short int patch;

    /// The version string
    const char *cstr;

  } version = {
    @TERRAIN_VERSION_MAJOR@,
    @TERRAIN_VERSION_MINOR@,
    @TERRAIN_VERSION_PATCH@,
    "@TERRAIN_VERSION_MAJOR@.@TERRAIN_VERSION_MINOR@.@TERRAIN_VERSION_PATCH@"
  };

  /// The width and height of height data in a tile
  const unsigned short int TILE_SIZE = @TERRAIN_TILE_SIZE@;

  /// The width and height of water mask data in a tile
  const unsigned short int MASK_SIZE = @TERRAIN_MASK_SIZE@;
}

#endif /* TERRAINCONFIG_HPP */
